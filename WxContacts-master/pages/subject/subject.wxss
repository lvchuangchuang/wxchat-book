/* pages/department/department.wxss */
.container {
	padding: 0;
    background-color: #fff;
}
.subject-container {
	width: 100%;
}
.subject-container .section {
	padding: 20rpx 28rpx;
	box-sizing: border-box;
	border-bottom: 2rpx solid #ddd;
}
.subject-container .section input {
	padding: 0 28rpx;
	width: 100%;
    height: 72rpx;
	font-size: 36rpx;
    line-height: 72rpx;
	background: #f4f4f8;
    border: 2rpx solid #f4f4f8;
    border-radius: 12rpx;
	box-sizing: border-box;
    text-align: center;
}
.scroll-view-item {
	position: relative;
	margin-left: 28rpx;
	border-bottom: 2rpx solid #eee;
}
.scroll-view-item navigator {
	position: relative;
	padding: 30rpx 30rpx 30rpx 0;
}

.scroll-view-item .subject-name {
	font-size: 48rpx;
	color: #333;
}

.scroll-view-item .subject-count {
	float: right;
	color: #999;
	margin-top: 12rpx;
	margin-right: 30rpx;
	font-size: 36rpx;
}

.scroll-view-item .arrow {
	position: absolute;
	top: 50rpx;
	right: 20rpx;
	width: 36rpx;
	height: 36rpx;
}